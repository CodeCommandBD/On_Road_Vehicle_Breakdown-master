# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# ==================== DATABASE ====================
MONGODB_URI=mongodb://localhost:27017/vehicle-breakdown
# or MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/dbname

# ==================== AUTHENTICATION ====================
JWT_SECRET=your-super-secret-jwt-key-min-32-characters
NEXTAUTH_SECRET=your-nextauth-secret-key-min-32-characters
NEXTAUTH_URL=http://localhost:3000

# ==================== PAYMENT GATEWAY (SSLCommerz) ====================
SSLCOMMERZ_STORE_ID=your-store-id
SSLCOMMERZ_STORE_PASSWORD=your-store-password
SSLCOMMERZ_IS_LIVE=false
# Set to 'true' for production

# ==================== CLOUDINARY (Image Upload) ====================
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ==================== GOOGLE AI (Optional) ====================
GOOGLE_API_KEY=your-google-ai-api-key
# For AI diagnosis feature

# ==================== PUSHER (Real-time) ====================
NEXT_PUBLIC_PUSHER_APP_KEY=your-pusher-app-key
PUSHER_APP_ID=your-pusher-app-id
PUSHER_SECRET=your-pusher-secret
PUSHER_CLUSTER=ap2
# Cluster: ap2 for Asia Pacific

# ==================== SENTRY (Error Tracking - Optional) ====================
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
SENTRY_ORG=your-org
SENTRY_PROJECT=your-project
SENTRY_AUTH_TOKEN=your-auth-token

# ==================== APPLICATION ====================
NEXT_PUBLIC_APP_URL=http://localhost:3000
# Production: https://yourdomain.com

NEXT_PUBLIC_COMPANY_PHONE=+8801XXXXXXXXX
# Replace with your actual company phone number

NODE_ENV=development
# Options: development | production | test

# ==================== CRON JOBS ====================
CRON_SECRET=your-cron-secret-key
# For securing cron job endpoints

# ==================== NOTES ====================
# 1. Never commit .env.local to git
# 2. NEXT_PUBLIC_* variables are exposed to the browser
# 3. Keep all secrets (passwords, API keys) without NEXT_PUBLIC_ prefix
# 4. Generate secure secrets: openssl rand -base64 32
# 5. Update NEXTAUTH_URL and NEXT_PUBLIC_APP_URL for production
